<%= form_with(model: person) do |form| %>
  <% if person.errors.any? %>
    <div style="background-color: #f8d7da; padding: 10px; border-radius: 5px;">
      <h2 style="color: #721c24;"><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>
      <ul style="list-style-type: none; padding-left: 0;">
        <% person.errors.full_messages.each do |error| %>
          <li style="color: #721c24;"><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 15px;">
    <%= form.label :profile_picture, "Profile Picture", style: "display: block; font-weight: bold;" %>
    <%= form.file_field :profile_picture, class: "form-control", style: "border-radius: 5px; padding: 5px; font-size: 14px; width: 200px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :first_name, "First Name", style: "display: block; font-weight: bold;" %>
    <%= form.text_field :first_name, class: "form-control", style: "border-radius: 5px; padding: 5px; font-size: 14px; width: 200px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :last_name, "Last Name", style: "display: block; font-weight: bold;" %>
    <%= form.text_field :last_name, class: "form-control", style: "border-radius: 5px; padding: 5px; font-size: 14px; width: 200px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :email, "Email", style: "display: block; font-weight: bold;" %>
    <%= form.text_field :email, class: "form-control", style: "border-radius: 5px; padding: 5px; font-size: 14px; width: 200px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :phone, "Phone", style: "display: block; font-weight: bold;" %>
    <%= form.text_field :phone, class: "form-control", style: "border-radius: 5px; padding: 5px; font-size: 14px; width: 200px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :instagram, "Instagram", style: "display: block; font-weight: bold;" %>
    <%= form.text_field :instagram, class: "form-control", style: "border-radius: 5px; padding: 5px; font-size: 14px; width: 200px;" %>
  </div>

  <div>
    <%= form.number_field :user_id, id: :friend_user_id, class: "form-control", value: current_user.id, type: :hidden %>
  </div>

  <div>
    <%= form.submit "Save", class: "btn btn-primary", style: "padding: 8px 20px; border-radius: 5px; background-color: #007bff; border: none;" %>
  </div>
<% end %>
